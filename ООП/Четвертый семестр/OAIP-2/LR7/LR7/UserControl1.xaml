<UserControl x:Class="LR7.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LR7"
             mc:Ignorable="d" >
    <Grid Width="184" Height="194">
        <Calendar Foreground="Black" BorderBrush="{x:Null}">
            <Calendar.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.017"/>
                    <GradientStop Color="Black" Offset="0.125"/>
                    <GradientStop Color="#FF00005F" Offset="0.517"/>
                    <GradientStop Color="#FF4C0056" Offset="1"/>
                </LinearGradientBrush>
            </Calendar.Background>
        </Calendar>
        <Button RenderTransformOrigin="0.5,0.5" Background="Black" BorderBrush="#FF2B1231" Foreground="#FF42184C" FontFamily="Garamond" FontSize="36" Margin="0,0,0,31">
            Click me
        </Button>
        <Button Background="Black" BorderBrush="#FF2B1231" Foreground="#FF42184C" FontFamily="Garamond" FontSize="14" Margin="0,163,0,0">
            Or click me
        </Button>
    </Grid>
</UserControl>
