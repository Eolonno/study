<Window x:Class="Lab_8.DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_8"
        mc:Ignorable="d"
        Title="DeleteWindow" Height="250" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="22" HorizontalAlignment="Center" Margin="20" VerticalAlignment="Top"><Run Text="Введите название "/><Run Text="объекта"/></TextBlock>
        <TextBox x:Name="NameTextBox" Grid.Row="1" Height="30" Width="300" FontSize="18"></TextBox>

        <Button IsDefault="True" x:Name="OkButton" Grid.Row="2" FontSize="20" HorizontalAlignment="Left" Margin="40 0 0 0" Content="Ok" Height="40" Width="100" Click="OkButton_Click"></Button>
        <Button IsCancel="True" x:Name="CancelButton" Grid.Row="2" HorizontalAlignment="Right" Margin="40 0 70 0" FontSize="20" Content="Cancel" Height="40" Width="100" Click="CancelButton_Click"></Button>
    </Grid>
</Window>
